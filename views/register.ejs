<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-md-offset-2 col-xs-12 form-group has-feedback">
            <form id="_form" role="form" method="post" action="">
                <div class="input-group-md">
                    <span class="input-group-addon" style="font-size:18px"><i class="fa fa-user"></i></span>
                    <input id="username" name="username" type="text" class="form-control" placeholder="用户名(6到10位的数字、字母、下划线的组合)" />
                </div>
                <div class="input-group-md">
                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                    <input id="pwd" name="pwd" type="password" class="form-control" placeholder="密码(6至20位的密码，不包含空格)" />

                </div>
                <div class="input-group-md">
                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                    <input id="pwdconfirm" name="pwdconfirm" type="password" class="form-control" placeholder="确认密码" />

                </div>
                <div class="input-group-md">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input id="email" name="email" type="text" class="form-control" placeholder="邮箱" />

                </div>
                <div class="input-group-md">
                    <span class="input-group-addon" ><i class="fa fa-mobile fa-lg"></i></span>
                    <input id="mobile" name="mobile" type="text" class="form-control" placeholder="手机号" />

                </div>
                <br/>
                <input type="button" class="button button-primary" value="提交" onclick="validate()" />
                <input type="button" class="button button-highlight" value="重置" onclick="register_reset()"/>
                <label id="message" style="color:#ff0000"><% if(message){%> <%=message %> <%}%></label>
            </form>
        </div>
    </div>
</div>
<script>
    function register_reset()
    {
        $('#username').val('');
        $('#pwd').val('');
        $('#pwdconfirm').val('');
        $('#email').val('');
        $('#mobile').val('');
    }
    function validate()
    {
        //check username
        if($('#username').val()=='')
        {
            $('#message').html('请输入用户名!');
            return;
        }
        else
        {
            $('#message').html('')
        }
        var exp =new RegExp('^[a-zA-Z0-9]{5,19}$');
        if(!exp.test($('#username').val()))
        {
            $('#message').html('请输入6到20位的数字、字母的组合作为用户名!');
            return;
        }
        else
        {
            $('#message').html('')
        }

        //check password
        if($('#pwd').val()=='')
        {
            $('#message').html('请输入密码!');
            return;
        }
        else
        {
            $('#message').html('')
        }
        exp =new RegExp('^\\S{5,19}$');
        if(!exp.test($('#pwd').val()))
        {
            $('#message').html('请输入6到20位的密码，不包含空格!');
            return;
        }
        else
        {
            $('#message').html('')
        }

        //check confirm
        if($('#pwdconfirm').val()=='')
        {
            $('#message').html('请输入确认密码!');
            return;
        }
        else
        {
            $('#message').html('')
        }
        exp =new RegExp('^\\S{7,19}$');
        if(!exp.test($('#pwdconfirm').val()))
        {
            $('#message').html('请输入8到20位的确认密码，不包含空格!');
            return;
        }
        else
        {
            $('#message').html('')
        }


        //check password equals to confirm
        if($('#pwd').val()!=$('#pwdconfirm').val())
        {
            $('#message').html('密码和确认密码不一致!');
            return;
        }
        else
        {
            $('#message').html('')
        }

        //check email
        if($('#email').val()!='')
        {
            exp =new RegExp('^([a-zA-Z0-9_-])+@([a-zA-Z0-9_-])+((\.[a-zA-Z0-9_-]{2,3}){1,2})$');
            if(!exp.test($('#email').val()))
            {
                $('#message').html('请输入有效的email格式!');
                return;
            }
            else
            {
                $('#message').html('')
            }
        }

        //check mobile
        if($('#mobile').val()!='')
        {
            exp =new RegExp('^1[3|4|5|8][0-9]\\d{4,8}$');
            if(!exp.test($('#mobile').val()))
            {
                $('#message').html('请输入有效的手机号码!');
                return;
            }
            else
            {
                $('#message').html('')
            }
        }

        //validation is ok,submit
        submitForm('_form');



    }
</script>